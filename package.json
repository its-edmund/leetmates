{
  "name": "leetmates",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "npm run build --workspace=@leetmates/web",
    "uninstall:web": "npm uninstall --workspace=@leetmates/web",
    "install:web": "npm install --workspace=@leetmates/web",
    "dev:web": "npm run dev --workspace=@leetmates/web",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "turbo": "^2.1.3"
  },
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
